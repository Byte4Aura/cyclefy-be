enum RecyclingStatus {
    submitted
    confirmed
    in_transit
    completed
    failed
}

// RECYCLINGS
model Recycling {
    id            String          @id @default(uuid()) @db.VarChar(255)
    user          User            @relation(fields: [user_id], references: [id])
    user_id       String          @db.VarChar(255)
    name          String          @db.VarChar(255)
    description   String          @db.VarChar(255)
    address       Address         @relation(fields: [address_id], references: [id])
    address_id    String          @db.VarChar(255)
    category      Category        @relation(fields: [category_id], references: [id])
    category_id   String          @db.VarChar(255)
    phone         Phone           @relation(fields: [phone_id], references: [id])
    phone_id      String          @db.VarChar(255)
    status        RecyclingStatus @default(submitted)
    status_detail String          @db.VarChar(255)
    created_at    DateTime        @default(now())
    updated_at    DateTime        @updatedAt

    images RecyclingImage[]
}

model RecyclingImage {
    id           String    @id @default(uuid()) @db.VarChar(255)
    recycling    Recycling @relation(fields: [recycling_id], references: [id])
    recycling_id String    @db.VarChar(255)
    image_path   String    @db.VarChar(255)
    image_name   String    @db.VarChar(255)
    image_size   Int
    created_at   DateTime  @default(now())
}
